<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <demo.com.hightlighttext.View.HightLightTextView
        android:id="@+id/hightLightTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:hKeywordColor="@android:color/holo_blue_bright"
        app:hTextColor="@android:color/black"
        app:hTextSize="14sp" />

    <demo.com.hightlighttext.View.HightLightTextView
        android:id="@+id/hightLightTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:hKeywordColor="@android:color/holo_blue_bright"
        app:hTextColor="@android:color/black"
        app:hTextSize="14sp" />

    <demo.com.hightlighttext.View.HightLightTextView
        android:id="@+id/hightLightTextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:hKeywordColor="@android:color/holo_blue_bright"
        app:hTextColor="@android:color/black"
        app:hTextSize="14sp" />
</LinearLayout>